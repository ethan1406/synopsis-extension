{
    "name": "Synopsis AI",
    "description": "Youtube Video Summarization",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "hello.html",
      "default_icon": "hello_extensions.png"
    },
    "content_scripts": [
      {
        "matches": [
          "*://youtube.com/*",
          "*://www.youtube.com/*",
          "*://m.youtube.com/*"
        ],
        "js": ["summarization.js"],
        "css": ["styles.css"],
        "run_at": "document_end"
      }
    ],
    "host_permissions": ["*://*.youtube.com/*"]
}